
	<h1 class="current-category"><% if (params[:category] != nil) %>Category:  <%= params[:category] %><% end %></h1>
	<% if @items.count == 0 %>
		<% if (params[:category] != nil) %>
			<h3>There are currently no items to review in this category. Click <a href="<%= new_item_path %>"><strong>Review Something New </strong> </a>to add the first!</h3>
		<% else %>
			<h3>There are currently no items to review. Click <a href="<%= new_item_path %>"><strong>Review Something New </strong> </a>to add the first!</h3>
		<% end %>
	<% else %>
		<div class="row">
			<% @items.each do |item| %>
				<div class="col-md-3" style="margin-top:15px;">
				<div  style="background-color:white;">
					<a href="/items/<%=item.id %>">
						<%= image_tag item.item_img.url(:item_index), class: "index-item", style: " margin-bottom:10px;" %>
						<h4 style="margin-top: 0px; padding:15px; "><strong><%= item.title %></strong><br> by <%= item.maker %> </h4>
					</a>
				</div>
				</div>
			<% end %>
		</div>	
	<% end %>


